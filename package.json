{
  "name": "@materia/addon-boilerplate",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thyb/materia-addon-boilerplate.git"
  },
  "main": "bundle.js",
  "author": "thibaud.arnault@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thyb/materia-addon-boilerplate/issues"
  },
  "homepage": "https://github.com/thyb/materia-addon-boilerplate#readme",
  "scripts": {
    "build": "npm run clean && npm run build:client && ncp server dist/server && npm run build:server && npm run postbuild",
    "build:client": "rollup -c",
    "build:server": "tsc -p ./tsconfig.server.json",
    "postbuild": "rimraf dist/server/index.ts && ncp package.json dist/package.json",
    "clean": "rimraf dist",
    "lint": "npm run lint:ts && npm run lint:sass",
    "lint:ts": "ng lint --type-check=true",
    "lint:sass": "sass-lint --verbose --no-exit --config ./.sass-lint.yml",
    "postinstall": "npm rebuild node-sass"
  },
  "dependencies": {
    "@angular/animations": "^5.2.5",
    "@angular/cdk": "^5.2.1",
    "@angular/core": "^5.2.2",
    "@angular/forms": "^5.2.5",
    "@angular/material": "^5.2.1"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.1",
    "rollup-plugin-angular-inline": "^1.0.1",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-typescript2": "^0.10.0",
    "typescript": "^2.6.2"
  },
  "materia": true
}
